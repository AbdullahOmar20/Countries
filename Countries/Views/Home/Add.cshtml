
@model PersonAddRequest
@{
     ViewBag.Title = "Add Person";
}

<h1>@ViewData["Title"]</h1>

<div class="w-50">
    <form action="~/person/add" method="post">
    <div class="form-feld flex">
        <div class="w-25">
            <label for="Name" class="form-label pt">Person Name</label>
        </div>
        <div class="flex-1">
            <input type="text" id="Name" name="Name" class="form-input"/>
        </div>
    </div>

    <div class="form-feld flex">
        <div class="w-25">
            <label for="Email" class="form-label pt">Email</label>
        </div>
        <div class="flex-1">
            <input type="Email" id="Email" name="Email" class="form-input"/>
        </div>
    </div>


    <div class="form-feld flex">
        <div class="w-25">
            <label for="DateOfBirth" class="form-label pt">Date Of Birth</label>
        </div>
        <div class="flex-1">
            <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input"/>
        </div>
    </div>


    <div class="form-feld flex">
        <div class="w-25">
            <label class="form-label pt">Gender</label>
        </div>
        <div class="flex-1">
            <input type="radio" id="Male" name="Gender" value="Male" class="ml"/>
            <label for="Male">Male</label>

            <input type="radio" id="Female" name="Gender" value="Female" class="ml" />
            <label for="Female">Female</label>

        </div>
    </div>


    <div class="form-feld flex">
        <div class="w-25">
            <label for="Country" class="form-label pt">Country</label>
        </div>
        <div class="flex-1">
            <select name="Country" id="Country" class="form-input">
            @foreach(var country in ViewBag.Countries)
            {
                <option value="@country.Id">@country.Name</option>
            }
            </select>
        </div>
    </div>


    <div class="form-feld flex">
        <div class="w-25">
            <label for="Address" class="form-label pt">Address</label>
        </div>
        <div class="flex-1">
            <textarea id="Address" name="Address" class="form-input"></textarea>
        </div>
    </div>


    <div class="form-field flex">
        <div class="w-25">
        </div>
        <div class="flex-1">
            <input type="checkbox" name="ReceiveNewsLetters" id="ReceiveNewsLetters" value="true" />
            <label for="ReceiveNewsLetters" class="form-label">Receive News Letters</label>
        </div>
    </div>


   <div class="form-field flex">
   <div class="w-25">
   </div>
   <div class="flex-1">
        <button class="button button-green-back">Create</button>

        @if (ViewBag.Errors != null)
            {
            <div class="text-red ml">
            <ul>
            @foreach (string error in ViewBag.Errors)
                {
                    <li class="ml">@error</li>
                }
            </ul>
            </div>
        }
    </div>
    </div>

    
    </form>
</div>